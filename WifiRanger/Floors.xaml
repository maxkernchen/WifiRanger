<Page x:Class="WifiRanger.Floors"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WifiRanger"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Floors"
      Background="Wheat">
    

    <Grid>
        
        <Canvas>
            <Canvas.Resources>
                <ControlTemplate x:Key="FloorLayoutTemplate" TargetType="ContentControl">
                    <ContentPresenter Content="{TemplateBinding ContentControl.Content}"/>
                </ControlTemplate>
            </Canvas.Resources>
            <ContentControl Name="FloorLayout"

                   Width="100"

                   Height="100"

                   Canvas.Top="100"

                   Canvas.Left="100"

                   Template="{StaticResource FloorLayoutTemplate}">
                <Rectangle />
            </ContentControl>
        </Canvas>
    </Grid>
</Page>
