<Page x:Class="WifiRanger.Floors"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WifiRanger"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="725"
      Title="Floors"
      Background="AliceBlue">
   
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Rectangle Grid.Column="0" Grid.Row="1" Margin="10" x:Name="rect" 
    Width="100" Height="100" Stroke="Aqua" MouseLeftButtonDown="rect_MouseLeftButtonDown"/>
        <Label Content="Choose the shape which best matches floor " Name ="FloorLabel" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Center" FontSize="30" VerticalAlignment="Top"/>

    </Grid>
</Page>
