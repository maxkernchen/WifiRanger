<Page x:Class="WifiRanger.Floors"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WifiRanger"
      mc:Ignorable="d" 
      
      d:DesignHeight="550" d:DesignWidth="725"
      
      Title="Floors"
      Background="AliceBlue" Loaded="Page_Loaded">
   
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
         
        
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
    
        <Label Content="Percent Coverage :" Grid.Column="0" Grid.Row="1"   HorizontalAlignment="Center" FontSize="30" VerticalAlignment="Top"/>
        <Label Content="0.0%" Name ="PercentCoverage" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Center" FontSize="60" VerticalAlignment="Center"/>
        <Image Name="RouterImage" Grid.Row="0" Grid.Column="0" VerticalAlignment="Bottom"></Image>
    </Grid>
</Page>
