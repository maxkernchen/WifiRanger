<Page x:Class="WifiRanger.MainPage"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:l="clr-namespace:WifiRanger"
        mc:Ignorable="d"
        Title="WifiRanger" Height="640" Width="900"
      Background="LightGray">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Resources/BackGround.png" Stretch="UniformToFill"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
           
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />

        </Grid.ColumnDefinitions>

        <ComboBox Name="Floors" DropDownClosed="Floors_DropDownClosed" Grid.Column ="1" Grid.Row="2" Text="Floors" Grid.IsSharedSizeScope="True" HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="100" MinHeight="20" Margin="0,30,0,0">
            <ComboBoxItem Content="1"/>
            <ComboBoxItem Content="2"/>
            <ComboBoxItem Content="3"/>
        </ComboBox>
        
        <ComboBox Name="RouterLocation" DropDownClosed="RouterLocation_DropDownClosed" Grid.Column ="1" Grid.Row="3" ToolTip="Enter the approximation location of the router" Grid.IsSharedSizeScope="True" HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="100" MinHeight="20" Margin="0,30,0,0">
            <ComboBoxItem Content="Near the Center"/>
            <ComboBoxItem Content="Near a Corner"/>
            
        </ComboBox><!--
    <ComboBox Name="Picked_Floor" ToolTip="Pick a Floor" Grid.Column ="1" Grid.Row="4"  SelectionChanged ="Picked_Floor_SelectionChanged" Grid.IsSharedSizeScope="True" HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="100" MinHeight="20" Margin="0,30,0,0">
            <ComboBox.SelectedItem>
                <Binding Path="FloorsVal" ElementName="Window">
                    <Binding.ValidationRules>
                        <l:ComboEmptyRule/>
                    </Binding.ValidationRules>
                </Binding>
            </ComboBox.SelectedItem>
        </ComboBox> -->
        <RadioButton Name="SQ_Feet_Radio" Grid.Column="1" Grid.Row="4" Margin="20,10" FontFamily="Cobert" FontWeight="Bold">Square Feet</RadioButton>
        <RadioButton Name="SQ_Meter_Radio" Grid.Column="1" Grid.Row="4" Margin="180,10,3,3" FontFamily="Cobert" FontWeight="Bold">Square Meters</RadioButton>
        <Button Name="Calculate_Button" Content="Calculate" Margin="0" Click="Calculate_Button_Click" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1" Grid.Row="5" Height="0" MinWidth="100" MinHeight="37" />
        <Frame x:Name="_NavigationFrame" NavigationUIVisibility="Hidden" />
        <Label Content="Number of Floors" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Top" FontFamily="Cobert" FontSize="14"/>
        <Label Content="Approximate Router Location" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="3" VerticalAlignment="Top" FontSize="14" FontFamily="Cobert"/>

        <Label Content="Enter House Information" Grid.ColumnSpan="3" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Top" FontSize="30" FontFamily="Cobert" Foreground="GhostWhite"/>
        <TextBox Name="SQ_Feet" Text="Square Feet" Grid.Column="1"  HorizontalAlignment="Center" GotFocus="SQ_Feet_GotFocus" VerticalAlignment="Center" Grid.Row="4"  Width="135" Height="21" Margin="54,40,53.333,22">
            
        </TextBox>


    </Grid>
</Page>
